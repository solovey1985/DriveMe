@{
    Layout = "~/Views/Shared/_SpaLayout.cshtml";
}
<div ng-app="MainApp" ng-controller="MainController" ng-cloak>
    <section layout="row" flex-offset="10" flex="80">
        <md-sidenav class="md-sidenav-left" show-gt-md
                    md-component-id="left"
                    md-is-locked-open="$mdMedia('gt-md')"
                    md-disable-backdrop
                    md-whiteframe="4"
                    layout-align="right">
            <md-toolbar class="md-theme-indigo">
                <h1 class="md-toolbar-tools">My Routes</h1>
            </md-toolbar>
            <md-content layout-padding ng-controller="LeftController">
                <md-list layout="column">
                    <md-list-item layout="row" layout-align="center center" class="md-3-line list-item" ng-repeat="route in routes">
                        <i class="fa fa-3x fa-map-signs" style="color:darkslateblue"></i>
                        <div layout="column" class="md-list-item-text">
                            <h3>{{route.name}}</h3>
                            <h5>{{route.start.address}}</h5>
                            <h6>
                                {{route.end.address}}
                            </h6>
                        </div>
                    </md-list-item>
                </md-list>
               
                <p>
                    <md-button class="md-fab add-route" ng-click="addRoute()">
                        <i class="fa fa-plus"></i>
                        <i class="fa fa-2x fa-road"></i>
                    </md-button>
                </p>
            </md-content>
        </md-sidenav>
        <md-content flex>
            <md-toolbar>
                <div class="md-toolbar-tools" layout="row"   layout-align="space-between center">
                    <div flex>
                        <md-button class="md-icon-button md-primary" layout-align="start center" hide-gt-md ng-click="toggleLeft()"><i class="fa fa-2x fa-list"></i></md-button>
                    </div>
                    <div flex>
                        <md-button ng-click="toggleRight()"><i class="fa fa-2x fa-search"></i></md-button>
                        <md-button><i class="fa fa-2x fa-edit"></i></md-button>
                        <md-button><i class="fa fa-2x fa-close"></i></md-button>
                    </div>
                </div>
            </md-toolbar>
            <div layout="column" layout-align="top center">
                <p>
                    The left sidenav will 'lock open' on a medium (>=960px wide) device.
                </p>
                <p>
                    The right sidenav will focus on a specific child element.
                </p>
                <div>
                    
                </div>
                <div>
                 
                </div>
            </div>
            <div flex></div>
        </md-content>

        <md-sidenav class="md-sidenav-right md-whiteframe-4dp" md-component-id="right">
            <md-toolbar class="md-theme-light" ng-controller="RightController">

                <h1 class="md-toolbar-tools">Sidenav Right</h1>
                <md-button ng-click="close()" class="md-fab md-primary md-hue-2">
                    <i class="fa fa-close"></i>
                </md-button>

            </md-toolbar>
            <md-content layout-padding>
                <form>
                    <md-input-container>
                        <label for="testInput">Test input</label>
                        <input type="text" id="testInput"
                               ng-model="data" md-autofocus>
                    </md-input-container>
                </form>

            </md-content>
        </md-sidenav>
    </section>
</div>
@section styles{
    <link href="~/Content/Site.css" rel="stylesheet" /> 
}

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/locale/en-gb.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>


    <script src="~/Scripts/angular/modules/main/main.module.js"></script>
    <script src="~/Scripts/angular/modules/main/route.service.js"></script>
    <script src="~/Scripts/angular/modules/main/main.controller.js"></script>
}

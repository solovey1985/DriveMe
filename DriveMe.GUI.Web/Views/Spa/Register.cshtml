@model object
@{
    Layout = "../Shared/_LoginLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<form class="form-signin" ng-app="registerApp" ng-controller="registerController as regCtrl">
    <div class="" align="center">
        <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="firstName" class="control-label left">First Name</label>
            <input type="password" name="firstName" class="form-control" id="firstName" placeholder="John">
        </div>
        <div class="form-group">
            <label for="lastName" class="control-label left">Last Name</label>
            <input type="password" name="lastName" class="form-control" id="lastName" placeholder="Doe">
        </div>
        <div class="form-group">
            <label for="pass" class="control-label left">Password</label>
            <input type="password" class="form-control" id="pass" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="confirmPass" class="control-label left">Password Confirmation</label>
            <input type="password" class="form-control" required id="confirmPass" placeholder="Repeat password">
        </div>
        <div class="form-group">
            <label for="phone" class="control-label left">Phone</label>
            <input type="password" class="form-control" required id="phone" placeholder="+380">
        </div>
        <div class="form-group">
            <input type="checkbox" name="sendNotifications">
            <label>Send Notifications by Email</label>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-success">Sign Up</button>
        </div>
    </div>
    <div class="">
        <div class="jumbotron">
            <button type="button" class="btn btn-danger btn-lg btn-block"><i class="fa fa-google-plus" aria-hidden="true"></i>&nbsp;Google</button>
            <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-facebook-square" aria-hidden="true"></i>&nbsp;Facebook</button>
        </div>
    </div>
</form>
@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/locale/en-gb.js"></script>
    
    @Scripts.Render("~/scripts/angular/register")
}